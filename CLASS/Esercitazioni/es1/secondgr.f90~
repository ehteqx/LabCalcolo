program secondo_grado

        
      implicit none               ! l' istruzione obbliga a definire esplicitamente il tipo di ogni variabile

      
      real    :: a,b,c,realsol            ! i coefficienti reali dell' equazione
                                  ! a x**2 + b x + c = 0

      complex :: discr,xp,xm      ! discriminante e soluzioni corrispondenti
                                  ! alle due scelte del segno davanti la
                                  ! radice quadrata

      read*, a,b,c                ! i coefficienti vengono letti
      
        		
	if ((a .EQ. 0) .AND. (b .EQ. 0)) then
		print*, "Impossible to compute!"
		
	elseif (a .EQ. 0) then
		realsol = -c/b
      		print*, realsol
      		
      	else
      		discr = b**2 - 4*a*c
      		xp = ( -b + sqrt(discr) )/(2*a)
      		xm = ( -b - sqrt(discr) )/(2*a)
      		print*,xp,xm
	end if
      
end program secondo_grado
